{
	"manifest_version": 3,
	"name": "Alx-plan-to-google-calendar",
	"description": "this extension will save the alx schedules to google calendar",
	"version": "0.1.0",
	"permissions": [
		"activeTab",
		"tabGroups",
		"scripting"
	],
	"icons": {
		"16": "images/icon-16.png",
		"32": "images/icon-32.png",
		"48": "images/icon-48.png",
		"128": "images/icon-128.png"
	},
	"host_permissions": [
		"https://intranet.alxswe.com/planning/*"
	],
	"action": {
		"default_popup": "popup.html",
		"default_icon": {
			"16": "images/icon-16.png",
			"32": "images/icon-32.png",
			"48": "images/icon-48.png",
			"128": "images/icon-128.png"
		}
	},
	"background": {
        "service_worker": "script/service-worker.js",
        "type": "module"
    },
	"content_scripts": [
		{
			"matches": [
				"https://intranet.alxswe.com/planning/me"
			],
			"js": [
				"scripts/contentScript.js"
			]
		}
	]
}